<footer class="page-wrapper__inner" id="footer">
    {% if footer %}
        {{ footer }}
    {% endif %}
    <img class="logo" src="/themes/contrib/palm/images/palm.svg" width="70" />
    <p>
        <span class="heading">
            »Eine Insel der Vernuft
            <br>
            in einem Meer von Unsinn«
        </span>
        {% if footer_link %}
        <a href="{{ path('entity.node.canonical', {'node': footer_link }) }}" class="author">
        {% else %}
        <span class="author">
        {% endif %}
            Karl Barth
        {% if footer_link %}
        </a>
        {% else %}
        </span>
        {% endif %}
        <span class="copyright">
            © Blätter Gesellschaft mbH,
            {{ "now"|date("Y") }}
        </span>
    </p>
</footer>
