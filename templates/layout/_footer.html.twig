<footer class="page-wrapper__inner" id="footer">
    <img class="logo" src="/themes/contrib/palm/images/palm.svg" width="70" alt="{{ 'palm logo'|t }}" />
    <p>
        <span class="heading">
            »Eine Insel der Vernunft
            <br>
            in einem Meer von Unsinn«
        </span>
        {% if footer_link %}
        <a class="author" href="{{ path('entity.node.canonical', {'node': footer_link }) }}"{% if footer_link_title %} title="{{ footer_link_title }}"{% endif %}>
        {% else %}
        <span class="author">
        {% endif %}
            Karl Barth
        {% if footer_link %}
        </a>
        {% else %}
        </span>
        {% endif %}
        <span class="copyright">
            © Blätter Gesellschaft mbH,
            {{ "now"|date("Y") }}
        </span>
    </p>
    {% if footer %}
        {{ footer }}
    {% endif %}
</footer>
